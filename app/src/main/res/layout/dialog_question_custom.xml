<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#f7f7f7"
    android:padding="12dp"
    android:minWidth="320dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/questionRealText"
        android:layout_marginHorizontal="18dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18sp"
        android:text="...." />


    <Button
        android:id="@+id/openIntentFromApp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="@string/open_app"
        android:textSize="12sp"
        android:backgroundTint="@color/colorWhite"
        android:layout_height="wrap_content" />

    <Button
        android:visibility="gone"
        android:id="@+id/questionCompleted"
        android:layout_width="match_parent"
        android:text="@string/i_completed"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:backgroundTint="@color/colorAccent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="12dp"
            android:background="@drawable/custom_box_blue"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/loadingText"
            android:text=".."
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/questionLoadingProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp"
            android:progress="0"
            />
    </LinearLayout>


</LinearLayout>