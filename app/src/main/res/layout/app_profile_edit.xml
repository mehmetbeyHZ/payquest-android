<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_marginTop="52dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/userAvatar"
                android:layout_width="80dp"
                app:civ_border_width="2dp"
                android:background="@drawable/image_bg"
                app:civ_border_color="#433efe"
                android:src="@mipmap/ic_launcher_round"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="-35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="20dp"
                android:padding="5dp"
                android:background="@drawable/full_radius"
                android:layout_width="22dp"
                android:layout_height="22dp">
                <ImageView
                    android:src="@drawable/ic_baseline_edit_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <EditText
                android:id="@+id/password"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:hint="Şuanki şifreniz"
                android:inputType="textPassword"
                android:background="@drawable/edittext"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <EditText
                android:inputType="textPassword"
                android:id="@+id/new_password"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:hint="Yeni şifre"
                android:background="@drawable/edittext"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/confirm_password"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:hint="Tekrar yeni şifre"
                android:background="@drawable/edittext"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/logoutOtherDevices"
                android:layout_marginVertical="10dp"
                android:text="Diğer cihazlardan çıkış yap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/changePassword"
                android:text="Kaydet"
                android:textSize="12sp"
                android:backgroundTint="#433efe"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>